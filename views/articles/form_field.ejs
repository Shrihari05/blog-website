<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%=article.title%>" id="title" type="text" name="title" class="form-control">
</div> <br>
<div class="form-group">
    <label for="description">Description</label>
    <textarea required type="textarea" name="description" id="description" class="form-control"><%=article.description%></textarea>
</div> <br>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required type="textarea" name="markdown" class="form-control" id="markdown"><%=article.markdown%></textarea>
</div>
<br> 
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>